    let id = document.getElementById('flash');
    setTimeout(function () {
        // Find the alert element and hide it
        var alertElement = document.getElementById("flash");

        alertElement.innerHTML = "";
    }, 3000);

</script>
<script src="/scripts/cart.js"></script>
