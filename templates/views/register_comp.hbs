    <script>
        function validateForm() {
            // Get form elements
            const mobileNo = document.forms["complete_profile"]["mobileno"].value;
            const dob = document.forms["complete_profile"]["dob"].value;
            const address = document.forms["complete_profile"]["address"].value;
            const program = document.forms["complete_profile"]["program"].value;
            const dept = document.forms["complete_profile"]["dept"].value;
            const year = document.forms["complete_profile"]["year"].value;
            const semester = document.forms["complete_profile"]["Semester"].value;
            const password = document.forms["complete_profile"]["pass"].value;
            const confirmPassword = document.forms["complete_profile"]["conpass"].value;

            // Validate mobile number
            if (mobileNo.length !== 10) {
                alert("Mobile number must be 10 digits long.");
                return false;
            }

            // Validate required fields
            if (!mobileNo || !dob || !address || !program || !dept || !year || !semester || !password || !confirmPassword) {
                alert("All fields are required.");
                return false;
            }

            // Validate password and confirm password match
            if (password !== confirmPassword) {
                alert("Password and confirm password must match.");
                return false;
            }

            // Form is valid
            return true;
        }

